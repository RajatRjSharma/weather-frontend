{
  "plugins": ["import"],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      { "ts": "never", "tsx": "never", "js": "always", "jsx": "always" }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
